<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cl.wower.testandroid.MainActivity"
    android:orientation="vertical">

    <TextView
        android:text="SOPROIN"
        android:background="#5ba556"
        android:textColor="#ffff"
        android:padding="10dp"
        android:verticalScrollbarPosition="defaultPosition"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textSize="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <TextView
                android:text="Orientada a la comercializacion de productos industriales"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="Entrega la máxima eficiencia en atención y servicio a todos sus clientes, con entregas oportunas, productos de calidad, crédito flexible y atención personalizada."
                android:layout_marginTop="10dp"
                android:layout_marginRight="13dp"
                android:layout_marginLeft="13dp"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:textSize="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <ImageView
                android:background="@mipmap/ic_abrazadera"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="200dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ABRAZADERA"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:gravity="center"/>
            <Button
                android:id="@+id/quote"
                android:text="Cotizar producto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"

                android:background="#5ba556"
                />

            <ImageView
                android:background="@mipmap/ic_acople"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="200dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ACOPLE"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:gravity="center"/>
            <Button
                android:id="@+id/quote2"
                android:text="Cotizar producto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#5ba556"
                />

            <ImageView
                android:background="@mipmap/ic_flange"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="200dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FLANGE"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:gravity="center"/>
            <Button
                android:id="@+id/quote3"
                android:text="Cotizar producto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#5ba556"
                />
        </LinearLayout>



    </ScrollView>













</LinearLayout>
